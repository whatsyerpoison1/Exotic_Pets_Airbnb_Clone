
<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Create a new booking</h3>
        <%= simple_form_for [@pet, @booking] do |f| %>
          <%= f.input :start_date, placeholder: 'Start date' %>
          <%= f.input :end_date, placeholder: 'End date' %>
          <%= link_to "submit", pet_booking_path(@pet.id, @booking.id), f.submit class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
