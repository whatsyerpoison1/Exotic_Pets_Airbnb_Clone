
<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Create a new booking</h3>
        <%= simple_form_for [@pet, @booking] do |f| %>
          <%= f.input :start_date, placeholder: 'Start date' %>
          <%= f.input :end_date, placeholder: 'End date' %>
            <% if current_user %>
          <%= f.submit class: 'btn btn-success' %>
            <% else %>
              <p> Please sign in to book. </p>
            <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
