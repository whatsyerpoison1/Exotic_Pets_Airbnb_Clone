<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1615157707631-e86257f56d8c?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1500&q=80);">
  <div class="container py-5 " >
    <div class="row">
      <div class="col-12 col-md-6 offset-lg-3">
        <div class="bg-white opacity-100 rounded p-3 shadow">
          <% if current_user %>
            <h3>Create a new pet</h3>
            <%= simple_form_for @pet do |f| %>
              <%= f.input :name, placeholder: 'Pet' %>
              <%= f.input :species %>
              <%= f.input :description %>
               <%= f.input :price %>
              <%= f.input :photos, as: :file, input_html: { multiple: true } %>
              <%= f.submit class: 'btn btn-flat' %>
            <% end %>
          <% else %>
            <p> Please sign in to create a listing. </p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
