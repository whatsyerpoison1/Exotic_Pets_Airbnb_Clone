<h1>Hello</h1>
<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center text-white">
    <h1></h1>
    <h3 class="typed-js"></h3>
  </div>
</div>
<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0"></h3>
    <%= link_to 'Create a pet', new_pet_path, class: 'btn btn-flat' %>
  </div>
  <div class="row">
    <% @pets.each do |pet| %>
      <div class="co-12 colsm-6 col-md-4 mb-3">
        <%= link_to pet_path(pet), class:'text-decoration-none' #do %>
          <div class="card-category" data-aos="zoom-in" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%=# pet.photo.attached? ? cl_image_path(pet.photo.key) : asset_path('pet_background.jpg') %>)">
            <%= pet.name %>
          </div>
        <% #end %>
      </div>
    <% end %>
  </div>
</div>
