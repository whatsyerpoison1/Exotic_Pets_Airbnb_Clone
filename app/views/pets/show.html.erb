  <div id="other-pets">
  <h3> Check out our other featured pets</h3>
  </div>

<div class="pets-grid">
    <% @pets.each do |pet| %>
      <%= link_to pet_path(pet), class: "card-product" do %>
          <% if pet.photos.attached? %>
            <%= cl_image_tag pet.photos[0].key %>
          <% else %>
            <img src="http://loremflickr.com/280/280/ <%= pet.species %>" />
          <% end %>
          <div class="card-product-infos">
            <h2><%= pet.name %></h2>
            <p><%= pet.species %></p>
            <p>Description: <%= pet.description %></p>
          </div>
      <% end %>
    <% end %>
</div>
