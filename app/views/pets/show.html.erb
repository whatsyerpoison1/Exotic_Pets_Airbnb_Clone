
<%# <h1>Showpage</h1> %>
<div class="show">
      <h1 class="text-center"> <%= @pet.name %> </h1>
      <div class="container">


          <% @pet.photos.each do |photo| %>
            <% if @pet.photos.attached?%>
            <%= raise %>
              <%= cl_image_tag photo.key, crop: :fill %>
            <% else %>
              <%= img src="http://loremflickr.com/280/280/" %>
            <% end %>

          <% end %>
        </div>
          <h2 class='title-how-it-works'></h2>
            <div class="showgrid">
              <div>
                <h2 class="card-h2">Name:</h2>
                  <div class= "info">
                    <%= @pet.name %>
                  </div>
              </div>
              <div>
                <h2 class="card-h2">Price</h2>
                  <div class= "info">
                    <%= @pet.price %>
                  </div>
              </div>
              <div>
                <h2 class="card-h2">Species:</h2>
                <div class= "info">
                  <%= @pet.species %>
                </div>
              </div>
              <div>
                <h2 class="card-h2">Description</h2>
                  <div class= "info">
                <%= @pet.description %>
                  </div>
              </div>
          </div>
        </div>
</div>

<div class="d-flex justify-content-center w-100">
  <% if current_user != @pet.user %>
      <%= link_to "Book me!", new_pet_booking_path(@pet.id), class:"btn btn-success" %>
  <% else %>
    <%= link_to 'Update listing', edit_pet_path(@pet.id), class:"btn btn-primary"  %>
  <br>
    <%= link_to 'Delete listing', pet_path(@pet.id), method: 'delete', class:"btn btn-warning"  %>
  <% end %>
</div>

  <br>
  <br>
  <br>
  <br>
  <br>
  <br>
  <br>

  <div id="other-pets">
  <h3> Check out our other featured pets</h3>
  </div>

  <div class="pets-grid">
      <% @pets.each do |pet| %>
        <%= link_to pet_path(pet), class: "card-product" do %>
            <% if pet.photos.attached? %>
              <%= cl_image_tag pet.photos[0].key %>
            <% else %>
              <img src="http://loremflickr.com/280/280/ <%= pet.species %>"/>
            <% end %>
            <div class="card-product-infos">
              <h2><%= pet.name %></h2>
              <p><%= pet.price %></p>
              <p> <%= pet.species %></strong></p>
              <p> <%= pet.description %></p>
            </div>
        <% end %>
      <% end %>

</div>
