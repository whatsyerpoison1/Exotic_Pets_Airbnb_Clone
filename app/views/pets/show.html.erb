<div class="d-flex justify-content-center w-100">
  <% if current_user != @pet.user %>
      <%= link_to "Book me!", new_pet_booking_path(@pet.id), class:"btn btn-success" %>
  <% else %>
    <%= link_to 'Update listing', edit_pet_path(@pet.id), class:"btn btn-primary"  %>
  <br>
    <%= link_to 'Delete listing', pet_path(@pet.id), method: 'delete', class:"btn btn-warning"  %>
  <% end %>
</div>

